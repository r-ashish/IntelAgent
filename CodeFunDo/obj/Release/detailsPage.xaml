<Page
    x:Class="IntelAgent.detailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntelAgent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid 
            VerticalAlignment="Top"
            Background="#FF37B937"
            Height="110">
            <TextBlock 
                x:Name="headBlock"
                Text="Add Amount"
                Foreground="#FFF9F9F9" 
                HorizontalAlignment="Left"
                Margin="26,10,0,10"
                Style="{ThemeResource HeaderTextBlockStyle}" 
                CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" Width="311"/>
        </Grid>
        <ScrollViewer>
            <Grid Margin="0,110,0,0" Background="#FFF9F9F9">
                <TextBox x:ConnectionId='1' 
                    BorderBrush="Green"
                    Background="#FFF9F9F9"
                    Foreground="Green"
                    x:Name="amount"
                    InputScope="Number"
                    HorizontalAlignment="Right" 
                    Margin="0,57,20,0" 
                    TextWrapping="Wrap" 
                                              
                                                
                    VerticalAlignment="Top" Width="224"/>
                <TextBox x:ConnectionId='2' 
                    x:Name="descriptionBox"
                    BorderBrush="Green"
                    Foreground="Green"
                    Background="#FFF9F9F9"
                    HorizontalAlignment="Right" 
                    Margin="0,132,20,0" 
                    TextWrapping="Wrap" 
                    Text="Optional" 
                                                      
                                                        
                    VerticalAlignment="Top" Width="224"
                    AcceptsReturn="True"/>
                <TextBlock
                    FontSize="25"
                    Foreground="Green"
                    HorizontalAlignment="Left" 
                    Margin="20,60,0,0" 
                    TextWrapping="Wrap" 
                    Text="Amount :" 
                    VerticalAlignment="Top"
                    Height="39" Width="109"/>
                <TextBlock 
                    FontSize="25"
                    Foreground="Green"
                    HorizontalAlignment="Left" 
                    Margin="20,136,0,0" 
                    TextWrapping="Wrap" 
                    Text="Details :" 
                    VerticalAlignment="Top" 
                    Height="39" Width="109"/>
                <TextBlock 
                    x:Name="categoryBlock"
                    FontSize="25"
                    Foreground="Green"
                    HorizontalAlignment="Left" 
                    Margin="20,207,0,0" 
                    TextWrapping="Wrap" 
                    Text="Category :" 
                    VerticalAlignment="Top" 
                    Height="33" Width="125"/>
                <ComboBox x:ConnectionId='3' 
                    x:Name="categoryList"
                    BorderBrush="Green"
                    Background="#FF37B937"
                                                                    
                    HorizontalAlignment="Right"
                    Margin="0,197,20,0" 
                    VerticalAlignment="Top" 
                    Width="221">
                </ComboBox>
                <DatePicker
                    x:Name="Date" 
                    Foreground="Green"
                    HorizontalAlignment="Right" 
                    Margin="0,268,20,0" 
                    VerticalAlignment="Top" 
                    Width="221"/>
                <TextBlock 
                    x:Name="dateBlock"
                    FontSize="25"
                    Foreground="Green"
                    HorizontalAlignment="Left" 
                    Margin="20,278,0,0" 
                    TextWrapping="Wrap" 
                    Text="Date :" 
                    VerticalAlignment="Top" 
                    Height="39" Width="109"/>
                <Button x:ConnectionId='4' 
                    x:Name="actionButton"
                    Foreground="White"
                    BorderBrush="Green"
                    Background="#FF37B937"
                    HorizontalAlignment="Center" 
                    Margin="0,383,0,0"
                                              
                    VerticalAlignment="Top" 
                    Width="129"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

