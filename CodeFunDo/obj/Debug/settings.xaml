<Page
    x:Class="CodeFunDo.settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeFunDo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="19,30,0,0">
            <TextBlock 
                Text="settings" 
                HorizontalAlignment="Left"
                Margin="7,-6.5,0,26.5"
                Style="{ThemeResource HeaderTextBlockStyle}" 
                CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
        <Grid  x:Name="ContentRoot" Margin="19,9.667,19,39">
                <ToggleSwitch x:ConnectionId='1' 
                x:Name="toggle"
                IsTapEnabled="True"
                                      
                HorizontalAlignment="Left" 
                Margin="10,42,0,0" 
                VerticalAlignment="Top"
                Width="346" Height="75" />
                <TextBlock 
                HorizontalAlignment="Left"
                Margin="7,20,0,0" 
                TextWrapping="Wrap"
                FontSize="25"
                Text="Password Protection" 
                VerticalAlignment="Top" 
                Height="37" Width="262"/>
            <TextBlock 
                HorizontalAlignment="Left" 
                Margin="10,146,0,0" 
                TextWrapping="Wrap" 
                FontSize="25"
                Text="Currency"
                VerticalAlignment="Top"
                Height="35" Width="103"/>
                <Button x:ConnectionId='2' 
                x:Name="currencySelect"
                HorizontalAlignment="Right" 
                Margin="139,133,20,0" 
                VerticalAlignment="Top"
                Width="Auto"
                                    >
                    <Button.Flyout>
                        <ListPickerFlyout x:ConnectionId='4' 
                        x:Name="myPicker"
                                                                  
                        Title="Choose a currency"
                        ItemsSource="{Binding myCollection}" SelectedIndex="-1"/>
                    </Button.Flyout>
                </Button>
                <Button
                    x:Name="clear"
                    Content="Reset saved data"
                    HorizontalAlignment="Center"
                    Margin="0,286,0,155"/>
                <Button x:ConnectionId='3' 
                x:Name="changePass"
                                        
                Content="Change Password"
                HorizontalAlignment="Center"
                Margin="0,352,0,89"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

