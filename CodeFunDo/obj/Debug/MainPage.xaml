<Page
    x:Class="CodeFunDo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeFunDo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Send"/>
            <AppBarButton Icon="List"/>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='1' Label="Settings"                           />
                <AppBarButton Label="About"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    <ScrollViewer>
        <Grid>

            <TextBlock
            x:Name="balanceBlock"
            FontSize="25"
            HorizontalAlignment="Center" 
            Margin="10,73,10,0" 
            TextWrapping="Wrap" 
            TextAlignment="Center"
            Text="Your Current balance is" 
            VerticalAlignment="Top" 
            Height="108" Width="380"/>
            <Button x:ConnectionId='2' 
            x:Name="addButton"
            Content="Add Balance" 
                                   
            HorizontalAlignment="Center"
            Margin="0,225,0,0" 
            VerticalAlignment="Top" Width="139"/>
            <Button x:ConnectionId='3' 
            x:Name="minusButton"
                                     
            Content="Add Expenses" 
            HorizontalAlignment="Center"
            Margin="0,300,0,0" 
            VerticalAlignment="Top"/>


        </Grid>
    </ScrollViewer>
</Page>

