<Page
    x:Class="CodeFunDo.defaultPasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeFunDo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer>
        <Grid Background="#FF1F1F1F">
            <PasswordBox 
    		x:Name="getPassword"
    		Header="Password for your app" 
    		Margin="22,108,50,0"/>
            <TextBlock 
    		HorizontalAlignment="Left" 
    		Margin="22,48,0,0" 
    		TextWrapping="Wrap"
    		FontSize="30"
    		Text="Secure your details" 
    		VerticalAlignment="Top" 
    		Height="35" Width="273"/>
            <TextBlock
        	FontSize="15"
            HorizontalAlignment="Left"
        	TextAlignment="Left"
        	Margin="20,317,21,182"
        	TextWrapping="Wrap"
            >
        	<Run Text="Help us secure your data by setting a password."/>
        	<LineBreak/>
            <Run Text="You won't see this screen everytime you open the app."/>
        	<LineBreak/>
        	<Run/>
        	<LineBreak/>
        	<Run Text="To turn off Password Protection :"/>
        	<LineBreak/>
        	<Run Text="Go to settings &gt; Turn off Password."/>
            </TextBlock>
            <Button x:ConnectionId='1' 
            Content="Proceed" 
            HorizontalAlignment="Left" 
            Margin="22,557,0,30" 
            VerticalAlignment="Bottom" 
            Width="157"                     />
            <PasswordBox 
            	x:Name="confirmPaswrd"
            	Header="Confirm Password" 
            	Margin="22,208,50,0"/>

        </Grid>
    </ScrollViewer>
</Page>

