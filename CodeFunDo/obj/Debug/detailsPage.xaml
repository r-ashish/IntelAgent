<Page
    x:Class="CodeFunDo.detailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodeFunDo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <ScrollViewer>
    <Grid>
        <TextBox x:ConnectionId='1' 
            x:Name="amount"
            InputScope="Number"
            HorizontalAlignment="Right" 
            Margin="141,52,30,0" 
            TextWrapping="Wrap" 
                                      
                                        
            VerticalAlignment="Top" Width="224"/>
        <TextBox x:ConnectionId='2' 
            x:Name="descriptionBox"
            HorizontalAlignment="Right" 
            Margin="141,127,30,0" 
            TextWrapping="Wrap" 
            Text="Optional" 
                                              
                                                
            VerticalAlignment="Top" Width="224"
            AcceptsReturn="True"/>
        <TextBlock
            FontSize="25"
            HorizontalAlignment="Left" 
            Margin="10,55,0,0" 
            TextWrapping="Wrap" 
            Text="Amount :" 
            VerticalAlignment="Top"
            Height="39" Width="109"/>
        <TextBlock 
            FontSize="25"
            HorizontalAlignment="Left" 
            Margin="10,131,0,0" 
            TextWrapping="Wrap" 
            Text="Details :" 
            VerticalAlignment="Top" 
            Height="39" Width="109"/>
        <TextBlock 
            FontSize="25"
            HorizontalAlignment="Left" 
            Margin="10,202,0,0" 
            TextWrapping="Wrap" 
            Text="Category :" 
            VerticalAlignment="Top" 
            Height="33" Width="125"/>
        <ComboBox 
            ItemsSource="{Binding myCollection}"
            HorizontalAlignment="Right"
            Margin="144,192,30,0" 
            VerticalAlignment="Top" 
            Width="221"/>
        <DatePicker
            x:Name="Date" 
            HorizontalAlignment="Right" 
            Margin="144,263,30,0" 
            VerticalAlignment="Top" 
            Width="221"/>
        <TextBlock 
            FontSize="25"
            HorizontalAlignment="Left" 
            Margin="10,273,0,0" 
            TextWrapping="Wrap" 
            Text="Date :" 
            VerticalAlignment="Top" 
            Height="39" Width="109"/>
        <Button x:ConnectionId='3' 
            x:Name="actionButton"
            HorizontalAlignment="Center" 
            Margin="0,378,0,0"
                                      
            VerticalAlignment="Top" 
            Width="129"/>

    </Grid>
    </ScrollViewer>
</Page>

